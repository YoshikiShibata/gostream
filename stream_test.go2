func TestStream_Peek(t *testing.T) {
	defer trace("TestStream_Peek")()

	for _, tc := range [...]struct {
		dataSize int
	}{
		{dataSize: 0},
		{dataSize: 1},
		{dataSize: 1000},
	} {
		var data []int
		var want []int

		for i := 0; i < tc.dataSize; i++ {
			data = append(data, tc.dataSize-1-i)
			want = append(want, i)
		}

		ds := strconv.Itoa(tc.dataSize)

		t.Run("serial", func(t *testing.T) {
			defer trace("TestStream_Peek/serial:" + ds)()

			s := Of(data...)

			var lock sync.Mutex
			var peeked []int
			peekFunc := func(t int) {
				lock.Lock()
				peeked = append(peeked, t)
				lock.Unlock()
			}

			result := s.Peek(peekFunc).Sorted(func(t1, t2 int) bool {
				return t1 < t2
			}).ToSlice()
			if !slices.Equal(result, want) {
				t.Errorf("result is %v, want %v", result, want)
			}

			lock.Lock()
			defer lock.Unlock()

			if !slices.Equal(peeked, data) {
				t.Errorf("peeked is %v, want %v", peeked, data)
			}
		})

		t.Run("parallel", func(t *testing.T) {
			defer trace("TestStream_Peek/parallel:" + ds)()

			s := Of(data...).Parallel()

			var lock sync.Mutex
			var peeked []int
			peekFunc := func(t int) {
				lock.Lock()
				peeked = append(peeked, t)
				lock.Unlock()
			}

			result := s.Peek(peekFunc).Sorted(func(t1, t2 int) bool {
				return t1 < t2
			}).ToSlice()
			if !slices.Equal(result, want) {
				t.Errorf("result is %v, want %v", result, want)
			}

			lock.Lock()
			defer lock.Unlock()

			if tc.dataSize != 0 && tc.dataSize != 1 && goMaxProcs != 1 {
				if slices.Equal(peeked, data) {
					t.Logf("tc.dataSize = %d", tc.dataSize)
					t.Errorf("peeked is identical to data")
				}
			}
			sort.Slice(peeked, func(i, j int) bool {
				return peeked[i] < peeked[j]
			})
			if !slices.Equal(peeked, want) {
				t.Errorf("peeked is %v, want %v", peeked, want)
			}
		})
	}
}

