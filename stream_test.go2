		t.Run("parallel",
			func(t *testing.T) {
				defer trace("TestStream_Distinct/parallel:" + ds)()

				result := Distinct(Of(input...).Parallel()).ToSlice()

				for i := 1; i < tc.dataSize; i++ {
					if result[i-1] > result[i] {
