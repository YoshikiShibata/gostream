				return
			}

			if noneMatch == tc.match {
				t.Errorf("noneMatch is %t, want %t", noneMatch, !tc.match)
			}
		})
	}
}

func TestStream_FindFirst(t *testing.T) {
	defer trace("TestStream_FindFirst")()

	for _, tc := range [...]struct {
		dataSize int
	}{
		{dataSize: 0},
		{dataSize: 1},
		{dataSize: 1000},
	} {
		var data []int

		for i := 0; i < tc.dataSize; i++ {
			data = append(data, 777-i)
		}

		ds := strconv.Itoa(tc.dataSize)

		t.Run("serial", func(t *testing.T) {
			defer trace("TestStream_FindFirst/serial:" + ds)()

			min := Of(data...).FindFirst()
			if tc.dataSize == 0 {
				if min.IsPresent() {
					t.Errorf("min.IsPresent() is true, want false")
				}
				return
			}

			if min.Get() != 777 {
				t.Errorf("min.Get() is %d, want 777", min.Get())
			}
		})

		t.Run("parallel", func(t *testing.T) {
			defer trace("TestStream_FindFirst/parallel:" + ds)()

			min := Of(data...).Parallel().FindFirst()
			if tc.dataSize == 0 {
				if min.IsPresent() {
					t.Errorf("min.IsPresent() is true, want false")
				}
				return
			}

			if min.Get() != 777 {
				t.Errorf("min.Get() is %d, want 777", min.Get())
			}
		})
	}

